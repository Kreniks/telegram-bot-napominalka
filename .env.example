# =============================================================================
# Telegram-бот "Напоминалка" - Конфигурация
# =============================================================================

# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# ОСНОВНЫЕ НАСТРОЙКИ
# Путь к базе данных
DB_PATH=reminders.db

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Файл логов
LOG_FILE=bot.log

# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# Интервал проверки напоминаний (секунды)
CHECK_INTERVAL_SECONDS=60

# Количество попыток отправки при ошибке
NOTIFICATION_RETRY_ATTEMPTS=3

# Задержка между попытками (секунды)
NOTIFICATION_RETRY_DELAY_SECONDS=5

# Максимальное количество одновременных напоминаний
MAX_CONCURRENT_REMINDERS=100

# Лимит сообщений в минуту
RATE_LIMIT_MESSAGES_PER_MINUTE=30

# НАСТРОЙКИ ЛОГИРОВАНИЯ
# Максимальный размер файла лога (МБ)
LOG_MAX_SIZE_MB=50

# Количество backup файлов логов
LOG_BACKUP_COUNT=10

# НАСТРОЙКИ БАЗЫ ДАННЫХ
# Включить автоматический backup
DB_BACKUP_ENABLED=true

# Интервал создания backup (часы)
DB_BACKUP_INTERVAL_HOURS=24

# Количество дней хранения старых записей
DB_CLEANUP_DAYS=30

# НАСТРОЙКИ БЕЗОПАСНОСТИ
# Разрешенные пользователи (через запятую, пусто = все)
ALLOWED_USERS=

# ID администратора (для команды /stats)
ADMIN_USER_ID=

# НАСТРОЙКИ МОНИТОРИНГА
# Включить health check сервер
HEALTH_CHECK_ENABLED=true

# Порт для health check
HEALTH_CHECK_PORT=8080

# Включить сбор метрик
METRICS_ENABLED=false

# Включить аналитику
ENABLE_ANALYTICS=false

# НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ
# Режим отладки
DEBUG_MODE=false

# Тестовый режим
TEST_MODE=false

# НАСТРОЙКИ ДЛЯ DOCKER
# Режим запуска (normal, advanced, monitor, test)
RUN_MODE=normal

# Создавать backup при запуске
CREATE_BACKUP=false

# Выводить логи в stdout
LOG_TO_STDOUT=false

# Запускать тесты при старте
RUN_TESTS=false

# Скрипт для запуска (для supervisor)
BOT_SCRIPT=main.py

# НАСТРОЙКИ СБОРКИ (для Docker)
BUILD_DATE=
VCS_REF=
VERSION=1.0.0
